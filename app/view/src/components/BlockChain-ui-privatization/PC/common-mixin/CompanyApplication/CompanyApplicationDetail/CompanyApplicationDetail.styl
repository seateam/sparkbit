.CompanyApplicationDetail {
  .company-application {
    padding-block: 20px 44px;
    background: var(--color-BG);
    .title {
      padding: 40px 0;
      width: 66.14vw;
      margin-inline: auto;
      color: var(--color-text-primary);
      font-size: 32px;
      font-style: normal;
      font-weight: 700;
      line-height: normal;
    }
    .step-icon {
      width 32px
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      margin-right 8px
      color: var(--color-text-secondary);
      font-size: 16px;
      font-style: normal;
      font-weight: 600;
      border-radius: 100px;
      background: var(--color-Toggle);
      &.a-12-bg {
        color: var(--color-BTN-primary-text);
        background: var(--color-BTN-primary);
      }
    }

    .step-text {
      height 32px
      line-height 32px
      color: var(--color-text-secondary);
      font-size: 16px;
      font-style: normal;
      font-weight: 600;
      white-space: nowrap;
      background: transparent;
      &.a-12-bg {
        color: var(--color-text-primary);
        background: transparent;
      }
    }

    .application-header {
      margin-bottom: 40px;
    }

    .application-step {
      display: flex;
      align-items: center;
    }

    .application-title {
      font-size 22px
      margin-top 40px

      .title-desc {
        font-size 12px
        margin-left 12px
      }
    }

    .step {
      padding: 24px;
      border-radius: 12px;
      margin-bottom: 20px;
      background: var(--color-BG);

      .step-title {
        margin-bottom 12px
        color: var(--color-text-primary);
        font-size: 20px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
      }
    }

    .setp-line {
      flex: 1;
      display inline-block
      border-top-style dotted
      border-top-width 3px
      border-color: var(--color-text-secondary);
      vertical-align middle
      margin-inline 12px
    }

    .option-region {
      display: flex;
      align-items: center;
      justify-content: center;
      color: var(--color-text-secondary);
      font-size: 14px;
      font-style: normal;
      font-weight: 500;
      line-height: 18px;
      margin-bottom: 24px;

      span {
        color: var(--color-text-primary);
        margin-inline: 4px;
      }
    }

    .application-region {
      padding-top 40px
    }

    .back-btn {
      margin-right 24px
      padding 10px
      vertical-align bottom
      display inline-block
    }

    .application-desc {
      font-size 12px
      margin-top 20px
    }

    .step-desc, .step-desc span {
      color: var(--color-text-secondary) !important;
      font-size: 18px;
      font-style: normal;
      font-weight: 400;
      line-height: 24px;
    }

    .sort {
      line-height 22px
    }
  }
}

// 国家版
.Int {
  .CompanyApplicationDetail {
    &.company-application-page, .company-application {
      margin 0
      width auto
      height 100%
      padding-bottom 0
    }

    .company-application-bar {
      width 960px
      margin 0 auto
    }

    .company-application .application-region, .company-application .step, .company-application .application-header {
      padding-left 0
    }
  }
}