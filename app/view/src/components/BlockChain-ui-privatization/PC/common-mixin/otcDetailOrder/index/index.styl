.page-otcDetailOrder {
  .input-line-warning {
    right: 0
  }
  width: 69.16%;
  min-height: 882px;
  margin: 40px auto;
  // position: relative;
  .page-otcDetailOrder-content {
    width: 72.29%;
    padding: 0 28px 40px;
    border-radius: 12px;
    background: var(--color-BG-Light);
    box-sizing: border-box;
  }
  .otcDetailOrder-buttons {
    margin-block: 28px;
    .textButtonClass {
      font-size: 16px;
      margin-left: 20px;
      color: var(--color-BTN-text-secondary-revert);
      border: 1px solid var(--color-BTN-secondary-border);
    }
  }
  .goPayDialog, .releaseDialog, .appealDialog {
    .text { font-size: 12px;}
  }
  .goPayDialog, .releaseDialog, .appealDialog {
    .text {
      img {
        width: 12px;
        height: 12px;
        margin: 2px 3px 0 0;
      }
      span {
        color: var(--color-Icon);
        font-size: 14px;
        font-weight: 400;
        line-height: 18px;
      }
    }
  }
  .maxEvm {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 1002;
    left: 50%;
    top: 50%;
    transform: translate3d(-50%, -50%, 0);
    padding: 10px;
    border-radius: 2px;
    img {
      min-width: 500px;
      max-width: 740px;
      min-height: 500px;
      max-height: 740px;
    }
  }
  .maxEvmAll {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 1001;
    top: 0;
    left: 0;
  }
  // 确认付款弹窗
  .goPayDialog {
    padding-bottom: 20px;
    .list {
      margin-top: 20px;
      position: relative;
      .payEvm {
        width: 140px;
        height: 100%;
        position: absolute;
        top: 0;
        right: 0;
        overflow: hidden;
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center center;
        cursor: pointer
      }
      li {
        box-sizing: border-box;
        min-height: 70px;
        margin-bottom: 1px;
        padding: 12px 20px
        font-size: 14px;
        font-weight: 400;
        line-height: 18px;
        .haveEvm {
          max-width: 200px;
        }
        .value {
          font-size: 16px;
          margin-top: 8px;
        }
      }
    }
  }
  // 确认收款并放币
  .releaseDialog{
    .passValueText {
      font-size: 14px;
      cursor: pointer;
      user-select: none;
      margin-bottom: 20px;
      .common-checkout {
        float: left;
        margin-top: 4px;
        vertical-align: middle;
      }
      .passValueText-text {
        vertical-align: middle;
      }
    }
  }
  .connection-dialog{
    .towMin{
      padding-top 10px
      padding-bottom 14px
    }
  }

  .connection-list{
    text-align: left;
    margin-bottom: 20px;
    .connection-li{
      width 400px
      height 70px
      margin-bottom 1px
    }
    .connection-title{
      letter-spacing: 0;
      line-height: 16px;
      padding-left 20px;
      padding-top 17px;
    }
    .connection-desc{
      margin-top:7px;
      font-size: 16px;
      letter-spacing: 0
      padding-left 20px;
    }
  }
  // 申诉
  .appealDialog {
    .area-line-content {
      margin-bottom: 20px;
      .input-line-baseStance {
        min-height: 28px;
      }
      .input-line-prompt {
        left: 14px;
      }
      .input_line_inp {
        padding-inline: 14px;
        textarea {
          width: calc(100% - 28px);
          line-height: 20px;
        }
      }
    }
  }
  // 取消订单
  .cancelOrderDialog {
    li {
      font-size: 14px;
      margin-bottom: 2px;
      line-height: 22px;
    }
    .cancelOrderDialog-check {
      margin: 18px 0;
      font-size: 14px;
      cursor: pointer;
      user-select: none;
      display: inline-flex;
      align-items: center;
      .common-checkout {
        vertical-align: middle;
      }
      .cancelOrderDialog-check-text {
        vertical-align: middle;
      }
    }
  }

  // 取消申诉
  .cancelAppealDialog {
    font-size: 14px;
    padding-bottom: 20px;
  }
}
// 国际版
