  .page-otcDetailOrder {
    margin: 0 auto;
    padding-bottom: 0;
    width: 100%;
    height: 100%;
    .page-otcDetailOrder-bar {
      position: relative;
      width: 1110px;
      padding-left: 10px;
      margin: 0 auto;
      .otcDetailOrder-header,
      .otcDetailOrder-message,
      .otcDetailOrder-options {
        padding-left: 0;
      }
    }
  }

