.innovation {
  .common-verify {
    display none
  }

  font-size 14px

  .page-banner {
    height 220px
  }

  .innovation-content {
    width 1180px
    margin 0 auto
    padding-top 24px
  }

  .main-content {
    width 760px
    min-height 920px
    padding 0 20px
    border-radius 2px
    float left

    .content-top {
      padding 46px 0 50px
      border-bottom-width 1px
      border-bottom-style solid

      .img {
        width 80px
        height 80px
        float left

        img {
          width 100%
          height 100%
        }
      }

      .info {
        padding-left 100px
      }

      .tit {
        font-size 22px
        line-height 22px
        font-weight normal
      }

      .info-text {
        margin-top 24px
        line-height 22px
        font-size 14px
      }
    }

    .main-text {
      line-height 24px
      padding-top 34px
      word-break break-all

      img {
        max-width 100% !important
        max-height 100% !important
      }

      p {
        word-break break-all
      }
    }
  }

  .f-r {
    float right
  }
}
  .base-info {
    padding 0 28px
    display: flex;
    justify-content: space-between;
    .left{
      width: 452px;
      padding-right: 28px;
      padding-top: 28px;
      border-right:1px solid var(--color-Toggle);
       .title {
        color: var(--color-text-primary);
        font-size: 24px;
        font-weight: 700;
        line-height: 32px; 
        margin-bottom: 40px;
    }
      .details{
        max-height: 400px;
        overflow: auto;
        scrollbar-width: none;
        p{
          white-space: wrap;
          word-break: break-all;
        }
      }
    }
    .title {
      font-size 16px
      font-weight normal
    }
    .bf {
      margin-bottom: 40px;
       p{
        white-space: wrap;
        word-break: break-all;
       }
      p.name {
        color: var(--color-text-secondary);
        font-size: 14px;
        font-style: normal;
        font-weight: 500;
        line-height: 18px;
      }
      p.value {
        color: var(--color-text-primary);
        font-size: 20px;
        font-style: normal;
        font-weight: 600;
        line-height: 24px;
      }

      .jdt {
        position relative
        height 8px
        width 100%
        margin-top: 8px;
        overflow hidden
        background var(--color-Input-border)
        border-radius: 100px;
      }

      .jdt-bar {
        position absolute
        top 0
        left 0
        height 100%
        width 50%
        background var(--color-BTN-primary)
        border-radius: 100px;
      }

      .num {
        line-height 14px
      }
    }

    .infor-list {
      padding-left: 28px;
      padding-top: 28px;
      width: 450px;
      .infor-wrap {
        padding: 12px 16px;
        margin-bottom: 20px;
        border-radius: 8px;
        background: var(--color-BG-Light);
      }

      .item {
        display: flex;
        align-items: center;
        justify-content: space-between;
        font-size: 14px;
        font-style: normal;
        font-weight: 500;
        line-height: 26px; 
        .key {
          color: var(--color-text-secondary);
        }
        .val {
          color: var(--color-text-primary);
        }
      }

      .spend-regon {
        margin-top 18px

        p {
          font-size 12px
          text-align right
          line-height 22px
          margin-bottom 0
        }
      }

      .qua, .qua-val {
        color: var(--color-text-primary);
      }

      .tt {
        margin 40px 0 20px
        text-align center
        color: var(--color-text-secondary);
        font-size: 14px;
        font-style: normal;
        font-weight: 500;
        line-height: 18px;

        a {
          margin-left 8px
          color: var(--color-BTN-primary);
        }
      }
    }
  }