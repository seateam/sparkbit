.currentSymbol {
  // 原
  // height: 69px;
  // 改，2022.09.24
  height: 39px;
  border-bottom-width: 1px;
  border-bottom-style: solid;
  .eft-box {
    display: inline-block;
    margin-left: 5px;
    .eft-box-icon {
      vertical-align: middle;
      margin-left: 5px;
      margin-right: 5px;
      cursor: pointer;
    }
    .eft-box-icon-box {
      display: inline-block;
      &:hover {
        .page-market {
          display: block;
        }
      }
    }
    .page-market {
      display: none;
      position: absolute;
      // top: 75px;
      width: 360px;
      padding: 20px;
      // right: -5px;
      box-sizing: border-box;
      font-size: 12px;
      letter-spacing: 0;
      line-height: 20px;
      z-index 99;
      box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
      .page-market-even {
        margin-bottom: 15px;
      }
      .page-market-click {
        cursor: pointer;
        margin-top: 5px;
      }
    }
  }
  .price-box {
    display: inline-block;
  }
  .price-box-eft {
    vertical-align: middle;
    line-height: 16px;
    margin-left: 5px;
    .symbol-number {
      // font-size: 12px!important;
      display: block;
      margin-left: 0 !important;
    }
    .price-box-eft  {
      display: block
    }
  }
  .symbol-total {
    // 原
    // line-height: 69px;
    // 改，2022.09.24
    line-height: 14px;
    float: left;
    padding-left: 20px;

    span {
      vertical-align: middle;
    }

    .symbol-name {
      display: inline-block;
      position: relative;
      font-size: 18px;
    }
    .symbol-name{
      position relative
      .coin-label{
        white-space:nowrap;
        display:inline-block;
        font-size:12px;
        font-weight:400;
        padding:0 4px;
        border-radius:2px;
        line-height:17px;
        vertical-align top
        margin-top 18px;
        margin-right 5px;
        position: relative;
        overflow: hidden;
        .coin-label {
          position: relative;
          z-index: 1;
          margin: 0;
          padding: 0;
        }
        .coin-bg {
          display: inline-block;
          width: 100%;
          height: 100%;
          position: absolute;
          left: 0;
          top: 0;
          opacity: 0.2;
        }
      }
    }

    .symbol-number {
      font-size: 20px;
      line-height: 24px;
      font-weight: 600;
      //margin-left: 5px;
    }

    .symbol-property {
      font-size: 14px;
      margin-top: 3px;
      font-weight: 600;
    }
  }

  .symbol-info {
    display: flex;
    // 原
    // padding: 18px 16px 0 0;
    // 改，2022.09.24
    padding: 5px 16px 0 0;
    // height: 34px;

    .info-item {
      float: left;
      margin-left: 24px !important;
      font-size: 12px;
      line-height: 18px;
      text-align: right;
      position: relative
      font-weight: 500;
      &:hover {
        .page-market-jz {
          display: block;
        }
      }
      .page-market-jz {
        display: none;
        position: absolute;
        top: 52px;
        width: 360px;
        padding: 20px;
        // right: -5px;
        box-sizing: border-box;
        font-size: 12px;
        letter-spacing: 0;
        line-height: 20px;
        z-index 99;
        text-align: left;
        box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
      }
      .jzTit {
        vertical-align: middle;
        .icon {
          font-size: 12px;
          cursor: pointer
        }
      }
      span {
        display: block;
      }
      .tit {
        white-space: nowrap;
      }
      .vla {
        // 原
        // margin-top: 10px;
        // 改，2022.09.24
        margin-top: 3px;
        font-weight: 600;
        font-size: 14px;
      }
    }
  }
}

