.tableList-container {
  .thead {
    display: flex;
    justify-content: space-between;
    height 36px
    line-height 36px
    padding: 0 20px;
    //border-bottom-width 1px
    //border-bottom-style solid
    font-size 12px
    font-weight: 500;
    color: var(--color-text-secondary);

    span {
      display inline-block
      white-space nowrap
      &:first-child {
        text-align: left;
      }
    }
  }

  .tbody {
    //padding 5px 0 2px
    position relative
    // 改，2022.09.25
    font-size 12px
    transiton height 0.5s ease
    width 100%
    -webkit-transition height 0.5s ease
    //margin-top -1px

    &.no-padding {
      padding 0
    }
    .symbol-item {
      //padding 0 15px 0 0
      line-height 16px
      cursor pointer
      position relative
      padding-block: 2px;
      display: flex;
      .td-rose {
        flex: 1;
      }
      .bg {
        display none
      }
      &.change-item {
        .change {
          position absolute
          animation 1s opacity2 0s 1
          top 0
          left 6px
          height 100%
          width 100%
          opacity 0
        }
      }
      &:hover {
        .bg {
          display block
          position absolute
          top 0
          left 0
          height 100%
          width 100%
        }
      }
      span {
        &.td-symbol {
          text-align: left;
          box-sizing: border-box;
          //padding-left: 16px;
        }
      }
    }
  }
  @keyframes opacity2 {
    0% {
      opacity 1
    }

    100% {
      opacity 0
    }
  }
  @keyframes opacity2 {
    0% {
      opacity 1
    }

    100% {
      opacity 0
    }
  }
  @keyframes opacity2 {
    0% {
      opacity 1
    }

    100% {
      opacity 0
    }
  }

  .tbodyBar{
    width: calc(100% - 40px);
    padding: 0 20px;
    position absolute
    bottom 0
  }

  .thead, .tbody {
    span {
      display inline-block
      text-align right
      position relative
      z-index 9
      .icon {
        display inline-block
        vertical-align middle
        height 16px
        background #f00
        float left
        margin 8px 5px 0 0
      }
      .hover_show {
        display none
      }
      &:hover {
        .hover_show {
          display block
        }
        .hover_hide {
          display none
        }
      }
    }
  }

  .tr-bg {
    position absolute
    height 16px
    top 0
    right -20px
    z-index 1
    padding 0
    width 10%
    transiton width 0.5s ease
    -webkit-transition width 0.5s ease
  }
}

