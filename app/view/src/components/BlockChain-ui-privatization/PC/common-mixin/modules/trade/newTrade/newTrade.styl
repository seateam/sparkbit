.trade-shrinks {
  .newTrade-index-container {
    .block-header {
      //display none

      span {
        margin-right 28px
        cursor pointer
        font-style: normal;
        font-weight: 600;
        font-size: 14px;
        line-height: 44px;
        color: var(--color-text-secondary);
      }
      span.actived,span:hover {
        color: var(--color-text-primary);
      }
    }
