.trade-box.lever-tradeForm {
    font-size: 12px;
    padding: 0;
    .title-block {
      height: 36px;
      line-height: 36px;
      //padding: 0 30px;
      border-bottom-width: 1px;
      border-bottom-style: solid;
      .tab {
        display: inline-block;
        border-bottom-style: solid;
        border-bottom-width: 0px;
        height: 36px;
        cursor: pointer;
        user-select: none;
        margin-right: 20px;
        font-size: 14px;
        font-weight: 500;
        position: relative;
        &::after {
          content: '';
          display: block;
          position: absolute;
          bottom: -1px;
          left: 0;
          width: 100%;
          height: 2px;
        }
        &.a-12-bd {
          border-bottom-style: solid;
          border-bottom-width: 2px;
        }
      }
      .total-assets {
        float: right;
        height: 38px;
      }
    }
    .trade-block {
      // 改，2022.09.24，注释
      // width: 50%;
      // float: left;
    }
    .trade-form {
      padding: 0 20px;
      .form-block {
        //padding: 0 15px;
      }
      .top-mag {
        display: flex;
        height: 26px;
        line-height: 26px;
        font-weight: 500;
        .lov {
          //float: right;
        }
      }
      .percentage {
        display: flex;
        position: relative;
        justify-content: space-between;
        margin: -19px -5px 0  -5px;
        .per-item {
          display: block;
          width: 25%;
          border-style: solid;
          margin: 0 5px;
          border-width: 1px;
          text-align: center;
          line-height: 24px;
          height: 22px;
          cursor: pointer;
          user-select: none;
          // 改，新增，2022.11.07
          font-size: 16px;
        }
      }
      .volume-trade {
        height: 40px;
        line-height: 42px;
      }
    }
    .totalBalancesHide {
      cursor: pointer;
      margin-left: 5px;
    }
    .lever-assets {
      float: left;
      position: relative;
      cursor: pointer;
      height: 40px;
      .assets-box {
        transition: all .3s ease;
        position: absolute;
        padding: 14px;
        left: 0;
        cursor: pointer;
        top: 40px;
        box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
        transform: translateY(-15px);
        opacity: 0;
        width: 400px;
        line-height: 18px;
        z-index: 99;
        height: 0;
        display: none;
        overflow: hidden;
        .list {
          line-height: 18px;
          height: 18px;
          margin-bottom: 5px;
          p {
            width : 45%;
            float: left;
            margin-left: 14px;
            span {
              margin-left: 5px;
            }
          }
        }
      }
      &:hover {
        .assets-box {
          display: block;
          transform: translateY(0);
          opacity: 1;
          height: auto;
          transition: all .3s cubic-bezier(1.0, 0.5, 0.8, 1.0);
        }
        .sjicon {
          transform:rotate(180deg)
        }
      }
    }
    .bc-infor {
      float: right;
      height: 40px;
      .lever-line {
        float: right;
        .line {
          width: 90px;
          height: 7px;
          margin-top: 16px;
          margin-left: 14px;
          float: right;
          background: linear-gradient(90deg,#04bc8b,#eb4d5c);
        }
      }
      .risk {
        position: relative;
        float: right;
        margin-right: 12px;
        cursor: pointer;
        cursor: pointer;
        .risk-text {
          position: absolute;
          box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
          transform: translateY(15px);
          opacity: 0;
          // 原
          // bottom: 39px;
          // right: 0;
          // padding: 10px 24px;
          // 改，2022.09.25
          top: 32px;
          left: 0px
          line-height: 22px;
          z-index: 99;
          height: 0;
          width: 0;
          overflow: hidden;
          display: none;
        }
        &:hover {
          .risk-text {
            display: block;
            transform: translateY(0);
            opacity: 1;
            width: max-content;
            height: auto;
            transition: all .3s cubic-bezier(1.0, 0.5, 0.8, 1.0);
          }
        }
      }
      .bc-price {
        float: right;
        margin-right: 22px;
      }
    }
    .form-info {
      margin-bottom: 12px;
      .info-box {
        padding: 12px 16px;
        border-radius: 8px;
        background: var(--color-BG-Light);
      }
      .info-item {
        .radio {
          span {
            //margin-right: 36px;
            cursor: pointer;
          }
          .common-redio {
            margin-right: 8px;
            margin-bottom: 2px;
          }
        }
        .rateIcon {
          margin-left: 7px;
          cursor: pointer;
          position: relative;
          display: inline-block;
          vertical-align: middle;
          .iconMark {
            display: none;
            position: absolute;
            -webkit-box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
            box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
            border-radius: 8px;
            background: var(--color-BG);
            width: 288px;
            top: 0;
            line-height: 22px;
            left: 20px;
            z-index: 3;
            padding: 8px 12px;
            color: var(--color-text-primary);
            font-size: 12px;
            font-style: normal;
            font-weight: 500;
            line-height: 16px;
            box-sizing: border-box;
          }
          &:hover {
            .iconMark {
              display: block;
            }
          }
        }
        .text1,.text2 {
          color: var(--color-text-secondary);
          font-size: 14px;
          font-style: normal;
          font-weight: 400;
          line-height: 26px;
        }
        .text2 {
          margin-left: auto;
        }
      }
    }
    .borrow {
      font-size: 14px;
      line-height: 18px;
      font-weight: 400;
      text-align: right;
      color: var(--color-text-secondary);
      margin-block: 8px 36px;
    }
    .inline-input {
      padding: 0 10px;
      .input-line-baseStance {
        color: var(--color-input-fill-on-light-bg);
      }
      .input-line-slot {
        line-height: 26px;
        .common-button-slot {
          color: var(--color-Icon);
        }
      }
    }
    .common-alert {
      position: relative;
      z-index: 99;
    }
    .alert-main {
      .alertTitle {
        font-size: 14px;
        margin-bottom: 12px;
      }
      .alertText {
        line-height: 18px;
        font-size: 12px;
      }
    }
  }
  .ts-content-text {
    line-height: 24px;
    height: 65px;
  }
