.trade-market-index-container {
  &.trade-market {
    font-size 12px
    width 300px

    .market-header {
      position relative
      padding 24px 20px 0
      //border-bottom-width 2px
      //border-bottom-style solid
    }

    .search {
      position relative
      height 40px

      .icon-serach {
        display none
        position absolute
        left 10px
        top 8px
        cursor pointer
      }

    }

    .kg {
      position absolute
      top 10px
      right 15px
      font-size 16px
      display none
    }
    .market-title-box {
      height:  44px;
      margin-top 12px;
    }

    .market-title-bar {
      position relative
      width 100%
      overflow hidden
      //height 36px
      height 44px
      line-height 44px
      display flex
      align-items center

      .hover_hide {
        display block
      }

      .hover_show {
        display none
      }

      .slide-btn {
        position absolute
        top 10px
        z-index 9
        cursor pointer
        display none

        &:hover {
          .hover_show {
            display block
          }

          .hover_hide {
            display none
          }
        }
      }

      .slide-btn-cur {
        display block
      }

      .icon-left {
        left 0
        padding-right 5px
      }

      .icon-right {
        right 0
        padding-left 5px
      }
    }

    .market-title {
      //height 36px
      overflow hidden
      width max-content
      white-space nowrap
      //position absolute
      top 0
      left 0
      transiton left 0.2s linear
      -webkit-transition left 0.2s linear

      li {
        float left
        font-size 14px
        //padding 0 3px 2px 3px
        cursor pointer
        margin-right 20px
        font-style: normal;
        font-weight: 600;
        //line-height: 14px;
        color: #999;
        position: relative;
        &::after{
          content: "";
          position: absolute;
          bottom: 0;
          left: 0;
          width: 100%;
          height: 2px;
          display: block;
        }
        &:hover {
          background: none;
        }
        &.selected::after {
          color: var(--color-1);
          background: linear-gradient(0, var(--color-1) 0%, var(--color-1) 100%);
          background-position: center bottom;
          background-size: 22px 100%;
          background-repeat: no-repeat;
        }
      }
    }

    .market-symbol {
      .thead {
        height 36px
        //border-bottom-width 1px
        //border-bottom-style solid
        font-style: normal;
        font-weight: 500;
        font-size: 12px;
        line-height: 36px;

        span {
          display inline-block
          //height 30px
          overflow hidden
        }
        .td-rose {
          flex 1
          padding-right 20px
        }
      }

      .tbody {
        padding 0 0 5px 0
        height 795px
        font-weight 500

        .block-title {
          height 29px
          line-height 29px
          padding-left 15px
          font-size 12px
          //border-bottom-style solid
          //border-bottom-width 2px
        }

        .symbol-item {
          padding 0 15px
          line-height 31px
          cursor pointer
          position relative

          .bg {
            display none
          }

          &:hover {
            .bg {
              display block
              position absolute
              top 0
              left 0
              height 100%
              width 100%
            }
          }

          span {

            &.multiple{
              padding: 0 6px;
              margin-left: 4px;
              border-radius: 4px;
              background: var(--color-tag-bg);
              color: var(--color-Icon);
              font-size: 12px;
              font-style: normal;
              font-weight: 500;
              line-height: 18px;
            }

            display inline-block
            position relative

            // 改，2022.09.29，新增
            font-style: normal;
            font-weight: 600;
            font-size: 12px;
            line-height: 13px;

            //color: #EAECEF;
            //font-weight: bold;

            b {
              font-weight 500
            }

            .iconMy {
              position absolute
              top -2px
              left 0
              display inline-block
              vertical-align middle
              width 20px
              height 20px
              float left
              transform: scale(0.6);

              svg {
                margin 0
              }
            }

            .hover_show {
              display none
            }

            &:hover {
              .hover_show {
                display inline-block
              }

              .hover_hide {
                display none
              }
            }
          }
        }

        .td-symbol span {
          font-weight 600
        }

        .td-price {
          color var(--color-1)
        }
      }

      .td-symbol {
        width 85px
        position relative
        padding-left 20px
        font-size 14px
      }

      .td-price {
        width 85px
        user-select none
        text-align left
        cursor pointer
      }

      .td-rose {
        user-select none
        width 70px
        text-align right
        cursor pointer
        flex 1
      }

      .sorte {
        display: flex;
        justify-content: center;
        align-items: center;
        float right
        width 18px
        height 18px
        //margin-top 9px

        .icon {
          vertical-align top
        }

        i {
          display inline-block
          width 8px
          height 8px
          position absolute
          left 0
          line-height 6px
          overflow hidden

          em {
            position absolute
            top 0
            right 0
            transition all 0.3s ease-in-out
            display block
            border-width 4px
            border-style solid dashed dashed
            border-color #828ea1 transparent transparent
            font-size 0
            line-height 0
            transform rotate(180deg)
          }

          &.icon-triangle-up {
            bottom 0

            em {
              transform rotate(0deg)
            }
          }
        }

        &.selected {
          .cur {
            em {
              border-color #EDF4F8 transparent transparent
            }
          }
        }
      }
    }

    .table-head {
      padding 0 15px
      overflow hidden
    }

    .table-body {
      padding 5px 0

      .table-body-bar {
        padding 0
      }

      tr {
        border none
        cursor pointer

        .store {
          margin 0 7px 0 0
        }

        td {
          overflow hidden
          padding 0 15px

          &:nth-child(2) {
            padding 0 10px 0 0
          }
        }
      }
    }
  }
  &.lever-market {
    .market-symbol {
      .tbody {
        height 855px
      }
    }
  }
}



left-block-shrink() {
  .trade-market {
    width 100px

    .search-input {
      display none
    }

    .icon-serach {
      display block
      left 0
    }

    .table-head {
      th {
        &:first-child {
          text-align center
        }

        &:nth-child(2), &:nth-child(3) {
          display none
        }
      }
    }

    .table-body {
      tr {
        td {
          &:first-child {
            padding 0
            text-align center
          }

          .store, &:nth-child(2), &:nth-child(3) {
            display none
          }
        }
      }
    }

    .market-title {
      width 100%

      li {
        display none

        &.selected {
          display block
          float none
          width 100%
          border none
          padding 0
          font-size 14px
          text-align center
        }
      }
    }

    .market-title-box {
      .slide-btn {
        display none
      }
    }

    .market-symbol {
      .thead {
        padding 0

        span {
          text-align center
          padding 0
          width 100%

          &.td-price {
            display none
          }

          &.td-rose {
            display none
          }
        }
      }

      .tbody {
        padding 0 0 5px 0

        .block-title {
          padding 0
          text-align center
        }

        .symbol-item {
          padding 0

          span {
            text-align center
            width 100%
            padding 0

            .icon, &.td-price {
              display none
            }

            &.td-rose {
              display none
            }
          }
        }
      }
    }
  }

  // 杠杆样式
  .lever-market {
    .market-symbol {
      .tbody {
        .symbol-item {
          text-align center

          span {
            width 60%
          }

          .multiple {
            width auto
          }
        }
      }
    }
  }
}

.not-data {
  text-align center
