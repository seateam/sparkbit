@media screen and (max-width: 1451px) {
  .currentSymbol {
    .operations-btn {
      .symbol-total {
        margin-top: 12px;
      }
      .activePrice-item {
        display: block;
        height: 22px;
        line-height: 22px;
      }
    }
    .symbol-info {
      width: 73%;
      .activePrice-item {
        display: none;
      }
    }
  }
}
@media screen and (max-width: 1345px) {
  .currentSymbol {
    .symbol-info {
      width: 70%;
    }
  }
