// 国际版
.left-common-header {
  height: 100%;
  width: 80px;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  box-shadow: 0 0 4px 0 rgba(0,0,0,0.50);
  .int-header-linkList {
    float: none;
    .button-logo {
      height: 70px;
      line-height: 70px;
      display: block;
      text-align: center;
      img {
        width: 28px;
        vertical-align: middle;
      }
    }
    .button-li {
      height: 36px;
      padding: 12px 0;
      text-align: center;
      cursor: pointer;
      position: relative;
      .header-button-links {
        margin-top: 4px;
        display: block;
        font-size: 12px;
      }
      .hover-show {
        display: none;
      }
      &:hover {
        .hover-show {
          display: inline-block;
        }
        .hover-hide {
          display: none;
        }
      }
      .messageCount {
        position: absolute;
        width: 4px;
        height: 4px;
        background: #f00;
        border-radius: 100px;
        top: 12px;
        left: 43px;
      }
    }
    .showLan {
      line-height: 36px;
    }
    .register {
      padding: 0;
      margin-top: 10px;
      span {
        display: block;
        width: 60px;
        height: 30px;
        line-height: 30px;
        border-width: 1px;
        border-style: solid;
        border-radius: 2px;
        margin: 0 auto;
      }
    }
  }
  .header-user {
    position: relative;
    &:hover {
      .header-user-market {
        display: block;
      }
    }
  }
  .header-user-market {
    box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
    top: 20px;
    display: none;
    position: absolute;
    width: 240px;
    height: 120px;
    left: 20px;
    z-index: 9999;
    .header-user-text {
      height: 80px;
      padding: 16px 22px;
      box-sizing: border-box;
      line-height: 24px;
      text-align: left;
      font-size: 12px;
      .userText {
        font-size: 14px;
        cursor: pointer;
      }
    }
    .header-user-out {
      height: 40px;
      padding: 0 22px;
      line-height: 40px;
      text-align: left;
      font-size: 12px;
      cursor: pointer;
    }
  }
  .nav-bottom {
    position: absolute;
    bottom: 10px;
    left: 0;
    width: 100%;
  }
  .header-sub-nav {
    position: absolute;
    left: 20px;
    max-height: 340px;
    box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
    .header-user-text {
      padding: 10px 0;
      min-width: 180px;
      li {
        cursor: pointer;
        span {
          line-height: 40px;
          display: block;
          padding-left: 20px;
          cursor: pointer;
          font-size: 14px;
        }
      }
    }
  }
  .showLan {
    position: relative;
    .header-user-showLan {
      box-shadow: 0 3px 4px 1px rgba(0,0,0,0.28);
      bottom: 20px;
      display: none;
      position: absolute;
      width: 240px;
      left: 20px;
      z-index: 9999;
      padding: 10px 0;
    }
    &:hover {
      .header-user-showLan {
        display: block;
      }
    }
  }
}