.coNewTrade-container {
  .block-header {
    height 39px
    line-height 39px
    padding 0 15px
    font-size 14px
    border-bottom-width 1px
    border-bottom-style solid
  }
  .thead {
    display: flex;
    justify-content: space-between;
    height 36px
    line-height 36px
    padding: 0 20px;
    //border-bottom-width 1px
    //border-bottom-style solid
    font-size 12px
    font-weight: 500;
    color: var(--color-text-secondary);
    span {
      display inline-block
      white-space nowrap
    }
  }
  .tbody {
    //padding 5px 0 5px
    // 原
    // font-size 12px
    // 改，2022.09.25
    font-size 12px
    //height: 472px;
    box-sizing: border-box;

    .symbol-item {
      cursor pointer
      position relative
      font-weight: 500;
      font-size: 12px;
      line-height: 16px;

      
      .bg {
        display none
      }
      .rose {
        position absolute
        top 1px
        left 10px
        font-size 12px
      }

      &:hover {
        .bg {
          display block
          position absolute
          top 0
          left 0
          height 100%
          width 100%
        }
      }

      &.change-item {
        .change {
          position absolute
          animation 2s opacityZ 0s 1
          top 2px
          left 0
          height 80%
          width 100%
          opacity 0
        }
      }
    }
    .__panel {
      padding: 0 !important;
      margin-right: -16px !important;
    }
    .__view{
      width: calc(100% - 40px);
      padding: 0 20px;
    }
  }
  .thead, .tbody {
    span {
      display inline-block
      text-align right
      position relative
      .icon {
        display inline-block
        vertical-align middle
        height 15px
        background #f00
        float left
        margin 8px 5px 0 0
      }
      .hover_show {
        display none
      }
      &:hover {
        .hover_show {
          display block
        }
        .hover_hide {
          display none
        }
      }
      &:first-child,
      &.td-symbol {
        text-align: left;
        box-sizing: border-box;
        //padding-left: 15px;
      }
    }
  }
  .tr-bg {
    position absolute
    height 20px
    top 0
    left 0
    z-index 1
    opacity 0.16
    padding 0
    width 10%
    transiton width 0.5s ease
    -webkit-transition width 0.5s ease
  }

  @keyframes opacityZ {
    0% {
      opacity 1
    }

    100% {
      opacity 0
    }
  }
  @keyframes opacityZ {
    0% {
      opacity 1
    }

    100% {
      opacity 0
    }
  }
  @keyframes opacityZ {
    0% {
      opacity 1
    }

    100% {
      opacity 0
    }
  }
    // 如果宽度大于 1820px
  @media screen and (min-width: 1820px){
    .tbody {
      height: 225px;
    }
  }
}
