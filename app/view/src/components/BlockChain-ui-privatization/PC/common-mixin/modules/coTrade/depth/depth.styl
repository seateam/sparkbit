.codepath-container {
  .coDepth {
    position relative
    overflow hidden
  }
  .block-header {
    height 39px
    line-height 38px
    padding 0 15px
    font-size 14px
    //border-bottom-width 1px
    //border-bottom-style solid
    z-index: 10;
    position: relative;
  }
  .tab-item {
    display: none;
    //margin-bottom: 5px;
    .block-header {
      display: none;
    }
    &.is-show {
      display: block;
    }
  }
  .current-price {
    height 40px
    line-height 40px
    padding 0 15px
    font-size 12px
    margin-top 0
    .price-box {
      height 40px
      line-height 40px
      font-size 12px
      span {
        vertical-align middle
        //min-width: 100px;
        display: inline-block;
        box-sizing: border-box;
      }
      .price {
        margin-right 10px
      }
      .indexPrice {
        font-size: 14px;
        margin-right 7px
      }
    }
    .jb {
      margin-left 10px
      display inline-block
      float right
      i {
        vertical-align middle
        display inline-block
        width 6px
        margin-right 3px
        height 14px
        border-width 1px
        border-style solid
        border-radius 2px
      }
    }
  }
  .title-tab {
    .tab {
      display: inline-block;
      border-bottom-style: solid;
      border-bottom-width: 0px;
      height: 38px;
      cursor: pointer;
      user-select: none;
      margin-right: 28px;
      font-size: 14px;
      &.a-12-bd {
        border-bottom-style: solid;
        border-bottom-width: 2px;
      }
    }
    .tab-rtwo {
      margin: 0;
    }
  }
  .depath-class {
    float: right;
    position: relative;
    padding: 0 0 0 0;
    cursor pointer
    span {
      user-select none
    }
    ul {
      display: none;
      position: absolute;
      top: 39px;
      right: 0;
      min-width: 80px;
      text-align: right;
      li {
        height: 24px;
        line-height: 24px;
        padding: 0 10px;
        cursor pointer
        margin-bottom: 1px;
      }
    }
    .hoverShow {
      display: none;
    }
    &:hover {
      .hoverHide {
        display: none;
      }
      .hoverShow {
        display: block;
      }
      ul {
        display: block;
      }
    }
  }
  // 如果宽度大于 1820px
  @media screen and (min-width: 1820px){
    .title-tab {
      display: none;
    }
    .tab-item {
      display: block
      .block-header {
        display: block;
      }
    }
  }
  .triangle-down {
      width: 0;
      height: 0;
      border-left: 6px solid transparent !important;
      border-right: 6px solid transparent !important;
      border-top-width: 5px;
      border-top-style: solid;
      margin: 0;
      vertical-align: middle;
      padding: 0;
      display: inline-block;
    }
}

