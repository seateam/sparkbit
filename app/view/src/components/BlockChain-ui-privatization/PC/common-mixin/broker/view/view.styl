.broker {
    margin-top: -60px
    .top-content {
      height: 312px;
      padding-top: 104px;
      position: relative;
      background: #000;
    }
    .warp {
      width: 66.66vw !important;
      margin: 0 auto;
      .common-table {
        background: none !important;
      }
    }
    .top-content .imgBg {
      width: 450px;
      height: 312px;
    }
    .top-content > div {
      display: flex;
      align-items: center;
      width: 66.66vw;
      margin-inline: auto;
    }
    .page-title {
      margin-top: 0;
      font-weight: 700;
      font-size: 40px;
      line-height: 50px;
      text-align: left;
    }
    .f_r {
      float: right;
    }
    .my-minning-pct {
      margin-top: 96px;
      .tit {
        font-size: 12px;
        line-height: 12px;
      }
      .num {
        font-size: 14px;
        line-height: 14px;
      }
      .pct-bar {
        margin: 10px 0;
        overflow: hidden;
        height: 12px;
        .pct {
          height: 12px;
          width: 50%;
        }
      }
    }
    .wk-info {
      display: flex;
      margin-top: 40px;
      .item-box {
        .box-bar {
          //border-left-width: 1px;
          //border-left-style: solid;
          //border-color: #333;
          //padding-left: 20px;
        }
        .name {
          color: #fff;
          font-size: 32px;
          font-style: normal;
          font-weight: 700;
          line-height: normal;
          text-align: left;
          .dy {
            font-size: 14px;
          }
        }
        .txt {
          color: var(--color-text-secondary);
          font-size: 16px;
          font-style: normal;
          font-weight: 600;
          line-height: 20px;
          margin-bottom: 4px;
        }
        .padding {
          height: 44px;
        }
      }
    }
    .my-harvest {
      border-radius: 2px;
      height: 170px;
      .tit {
        font-size: 14px;
        color: #EDF4F8;
        padding: 16px 0 0 20px;
      }
      .sy-num {
        margin-top: 32px;
        padding-left: 40px;
        float: left;
        span {
          font-size: 32px;
          line-height: 32px;
          display: inline-block;
          margin-right: 5px;
        }
        b {
          font-size: 14px;
        }
        p {
          font-size: 12px;
          margin-top: 10px;
        }
      }
      .tt-num {
        float: right;
        margin-top: 40px;
        font-size: 14px;
        line-height: 14px;
        .tt-i {
          float: left;
          padding: 0 40px;
          line-height: 30px;
          &:last-child {
            border-left-width: 1px;
            border-left-style: solid;
          }
          .t {
            font-size: 12px;
            margin-right: 5px;
          }
        }
      }
    }
    .mining-data {
      margin-top: 40px;
    }
    .mining-tit {
      height: 55px;
      line-height: 55px;
      border-bottom-width: 1px;
      border-bottom-style: solid;
      border-bottom-color: var(--color-Toggle);
      .viewTit {
        float: left;
        color: var(--color-text-primary);
        font-size: 20px;
        font-style: normal;
        font-weight: 600;
        em {
          font-size: 14px;
          font-weight: 500;
          color: var(--color-text-secondary);
          margin-left: 12px;
        }
      }
      .search {
        float: right;
        line-height: 28px;
        display: flex;
        gap: 12px;
        .common-button {
          float: left;
        }
      }
    }
    .filter-box {
      display: flex;
      width: 100%;
      // height: 55px;
      gap: 20px;
      padding: 0 !important;
      margin-block: 12px;
      border-bottom: 1px solid var(--color-Toggle);
    }
  }