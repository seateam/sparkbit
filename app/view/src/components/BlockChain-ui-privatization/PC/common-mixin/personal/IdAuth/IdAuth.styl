.user-management-id-auth {
  width 100%
  .user-management-child-header {
    font-weight 600
    font-size 32px
    padding 40px 44px
    box-sizing border-box
  }

  .user-management-center i {
    width 14px
  }

  .certification-process {
    margin 28px 0px
    position relative
    text-align center
  }

  .certification-process div p {
    display flex
    align-items center
    flex-direction column
    font-size 14px
    line-height 24px
  }

  .step-left {
    position absolute
    top 0px
    left 100px
    z-index 2
    padding-right 10px
  }

  .step-center {
    display inline-block
    position relative
    z-index 2
    padding 0 10px
  }

  .step-right {
    position absolute
    top 0
    right 100px
    z-index 2
    padding-left 10px
  }

  .certification-process .div-line {
    width 100%
    height 12px
    border-radius 100px
    background var(--color-Input-border)
    position absolute
    left 0
    top 13px
    z-index 1
  }
  
  .certification-process .div-line .div-progress  {
    width 22%
    height 12px
    border-radius 100px
    background var(--mainColor)
  }
  .certification-process .div-line .div-progress.active2 {
     width 50%
  }
 .certification-process .div-line .div-progress.active3 {
     width 80%
  }
  .active1,.active2,.active3{
    color var(--color-text-primary)
 }

  .span-mark {
    float left
    width 36px
    height 36px
    border-radius 50%
    font-size 16px
    display flex
    align-items center
    justify-content center
    text-align center
    line-height 24px
  }

  .idAuth-center {
    float left
    width 100%
    padding-bottom 100px
  }

  .upload1, .upload2, .upload3 {
    float left
  }

  .upload1 div.upload1-left, .upload2 div.upload2-left, .upload3 div.upload2-left, .upload1 div.upload1-right, .upload2 div.upload2-right, .upload3 div.upload2-right {
    width 320px
    height 211px
    float left
    box-sizing border-box
    border-radius 2px
    display flex
    align-items center
    justify-content center
  }
  .upload1-right,.upload2-right,.upload3-right,.upload4-right{
  background-repeat no-repeat
  background-size cover
  }

  .upload1 div.upload1-left, .upload2 div.upload2-left, .upload3 div.upload2-left {
    border-radius 8px
    border 2px dashed var(--color-BTN-primary)
    background var(--color-BG-Light-Purple)
    margin-right 20px
    cursor pointer
    position relative
    overflow hidden
    // svg {
    //   margin 20px auto
    // }

    p {
      font-size 12px
      text-align center
    }

    .mmd-loading-circle-right, .mmd-loading-circle-left {
      border-color var(--color-BTN-primary)
    }

    .loading-Img {
      position absolute
      z-index 2
      display flex
      flex-direction column
      align-items center
      gap 20px
    }

    .loading-img {
      width 100%
      height 100%
      margin 0
    }

    .loading-mc {
      position absolute
      top 0
      left 0
      right 0
      bottom 0
      z-index 3

      div {
        width 100%
        height 100%
        position absolute
        top 0
        left 0
        opacity 0.7
      }
    }
  }

  .upload2, .upload3 {
    margin-top 20px
  }

  .upload-text {
    float left
    font-size 12px
    line-height 20px
    margin-top 34px
    margin-bottom 26px
  }

  .upload_file {
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    cursor pointer
    z-index 3
  }

  .common-button-loading {
    position absolute
    vertical-align middle
    left 50%
    margin-left -17px
    top 45px
    transform translateY(-50%)
  }

  .loading-text {
    margin-top 70px
  }

  .audit-information {
    text-align center

    svg {
      margin 80px 0 15px 0
    }
  }

  .audit-information p {
    font-size 12px
    line-height 20px
    text-align center
  }
  .goAppAuth{
     width:380px;
     margin: 0 auto;
     padding-top:20px;
     .goAppAuthNote{
       margin-bottom:20px;
       margin-top:20px;
     }
     .qrCode{
       overflow:hidden;
       img{
         width:100px;
         height:100px;
         float:left;
         margin-right:20px;
       }
       div{
         float:left;
         height:100px;
         line-height:100px;
       }
     }
     .exImg{
       img{
         width:100%;

       }
     }
  }
}