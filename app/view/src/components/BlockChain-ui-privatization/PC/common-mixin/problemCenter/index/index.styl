.initiateQuestions {
  position: relative;
  .main-content {
    position: relative;
    min-height: 600px;
  }
  .menu {
    position: absolute;
    left: 0;
    top: 0;
    width: 280px;
    padding-block: 40px;
    height: 100%;
    box-sizing: border-box;
    background: var(--color-BG);
    border-right: 1px solid var(--color-Divider);
    .menu-tit {
      font-size: 16px;
      font-weight: normal;
      line-height: 32px;
      margin-bottom: 17px;
    }
    .menu-item {
      display: flex;
      align-items: center;
      margin: 12px;
      padding: 20px 24px;
      color: var(--color-text-secondary);
      font-size: 16px;
      font-style: normal;
      font-weight: 400;
      line-height: 20px;
      cursor: pointer;
      user-select: none;
      border-radius: 8px;
      &:hover,&.active {
        font-weight: 600;
        color: var(--color-text-primary);
        background: var(--color-BG-Light);
      }
    }
  }
  .content-box {
    padding-left: 280px;
  }
  .content-text {
    min-height: 800px;
    padding: 0 20px;
    .content-title {
      font-size: 32px;
      line-height: 40px;
    }
    .time {
      width: 100px;
      margin-top: 20px;
      font-size: 12px;
      line-height: 16px;
    }
    .main-text {
      margin-top: 30px;
      line-height: 24px;
      font-size: 14px;
    }
  }
}