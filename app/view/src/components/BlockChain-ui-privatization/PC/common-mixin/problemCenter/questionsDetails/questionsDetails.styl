.questionsDetails {
  .input-line-warning {
    right: 0
  }
  padding-bottom: 60px;
  .title {
    line-height: 40px;
    padding: 40px 24px;
    color: var(--color-text-primary);
    font-size: 32px;
    font-style: normal;
    font-weight: 700;
  }
  .content {
    width: 604px;
    margin-inline: auto;
    padding: 28px 28px 40px 28px;
    border-radius: 12px;
    border-bottom: 1px solid var(--color-Toggle);
    background: var(--color-BG-Light);
  }
  .message-even {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--color-text-secondary);
    font-size: 14px;
    font-style: normal;
    font-weight: 500;
    line-height: 26px;
    margin-bottom: 12px;
  }
  .message-even-text {
    color: var(--color-text-primary);
  }
  .message-even-mess {
    max-width: 400px;
  }
  .message-even-imgBox {
    margin-top: 6px;
    width: 380px;
    height: 140px;
    box-sizing: border-box;
    border-width: 1px;
    border-style: dashed;
    border-radius: 2px;
    overflow: hidden;
    img {
      width: 100%;
      height: 100%;
      display: block;
    }
  }
}