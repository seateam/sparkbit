.initQuestions {
  .title {
    line-height: 40px;
    padding: 40px 24px;
    color: var(--color-text-primary);
    font-size: 32px;
    font-style: normal;
    font-weight: 700;
  }
  .content {
    width: 604px;
    margin-inline: auto;
    padding: 28px 28px 40px 28px;
    border-radius: 12px;
    border-bottom: 1px solid var(--color-Toggle);
    background: var(--color-BG-Light);
  }
  .input-line-warning {
    right: 0
  }
  .imgmk {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    opacity: 0.5;
    z-index: 1;
  }
  .uploadImg {
    overflow: hidden;
    cursor: pointer;
    width: 100%;
    height: 188px;
    margin-top: 20px;
    box-sizing: border-box;
    border-width: 2px;
    border-style: dashed;
    border-radius: 8px;
    position: relative;
  }
  .upload-image {
    width: 100%;
    height: 100%;
    margin-top: -18px;
    display: block;
  }
  .uploadMark {
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: center;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    z-index: 2;
  }
  .uploadMark-text {
    user-select: none
    margin-block: 12px;
    color: var(--color-BTN-primary);
    font-size: 14px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
  }
  .uploadMark-mess {
    user-select: none
    color: var(--color-text-secondary);
    font-size: 12px;
    font-style: normal;
    font-weight: 500;
    line-height: 16px;
  }
  .uploadMark-input {
    width: 0;
    height: 0;
    opacity: 0;
  }
  .uploadLoading {
     z-index: 2;
    text-align: center;
    padding-top: 40px;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
  }
}